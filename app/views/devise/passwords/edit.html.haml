- bs_c = @bootstrap_class_list
- bs_c.merge!({ s: '',
    v: '' })

%h2{ class: bs_c[:page_title] }
  パスワードの再設定

= form_for(resource,
           as: resource_name,
           url: password_path(resource_name),
           html: { method: :put,
                   class: bs_c[:form] }) do |f|
  = render "devise/shared/error_messages", resource: resource

  = f.hidden_field :reset_password_token

  .field{ class: bs_c[:form_group] }
    = f.label :password, "新しいパスワード"
    = f.password_field :password,
                       autofocus: true,
                       autocomplete: "new-password",
                       placeholder: "#{@minimum_password_length}文字以内",
                       class: bs_c[:form_field]

  .field{ class: bs_c[:form_group] }
    = f.label :password_confirmation,
              "確認用パスワード"
    = f.password_field :password_confirmation,
                       autocomplete: "new-password",
                       class: bs_c[:form_field]

  .actions{ class: bs_c[:form_group] }
    = f.submit "新しいパスワードを設定",
               class: bs_c[:form_submit]

= render "devise/shared/links"
