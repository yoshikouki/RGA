- bs_c = { home_button: "btn btn-light btn-block my-5" }

%table.table.table-light
  %thead
    %tr
      %th VS
      %th HP
      %th STR
      %th VIT
  %tbody
    %tr
      %th= @player.name
      %td= @player.hp
      %td= @player.str
      %td= @player.vit
    %tr
      %th= @enemy.name
      %td= @enemy.hp
      %td= @enemy.str
      %td= @enemy.vit
-# = "#{@enemy.hp} /#{@enemy.max_hp}"


%table.table.table-dark.table-sm
  %tbody
  - @battle_logs[:action].each do |log|
    %tr
      %td{ rowspan: 4 }
        %span.badge.badge-light.badge-pill.mr-2
          = "#{log[:battle_turn]}"
    %tr
      %td
        = "#{log[:turn_log][:attack_log]}"
      %td
        = "#{log[:turn_log][:damage_log]}"
      - status = log[:turn_log][:status_log]
    %tr
      %td
        = @player.name
      %td
        %span.badge.badge-light.ml-3.mr-2
          = "HP"
        = status[:player_current_hp]
        %span.small
          = "/#{@player.hp}"
    %tr
      %td
        = @enemy.name
      %td
        %span.badge.badge-light.ml-3.mr-2
          = "HP"
        = status[:enemy_current_hp]
        %span.small
          = "/#{@enemy.hp}"


#user-info
  %span.col-3
    = @player.name
  %span.badge.badge-light.ml-3.mr-2
    = "HP"
  = @player.current_hp
  %span.small
    = "/#{@player.hp}"

#enemy-info
  %span.col-3
    = @enemy.name
  %span.badge.badge-light.ml-3.mr-2
    = "HP"
  = @enemy.current_hp
  %span.small
    = "/#{@enemy.hp}"

= link_to root_path, class: bs_c[:home_button] do
  %i.fas.fa-home
  Home